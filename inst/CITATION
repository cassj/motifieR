citHeader("To cite package 'motifieR' in publications use:")
desc <- packageDescription("motifieR")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)
citEntry(entry="Manual",
title = "motifieR tools for creating and using position specific scoring matrix models of sequence motifs",
author = personList(as.person("Caroline Johnston"),
year = year,
note = vers,
textVersion =
paste("Caroline Johnston (",
year,
"). motifieR tools for creating an using position specific scoring matrix models of sequence motifs. ",
vers, ".", sep=""))

